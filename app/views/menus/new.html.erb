<%= stylesheet_link_tag "form.css" %>
<button style="width: 10%;margin-left: 30px;">

  <%= link_to "Home", root_path %> 
</button> 

<%= form_with model: @menu do |form| %>
  <div>
    <%= form.label :menu_name %><br>
    <%= form.text_field :menu_name%>
    <% @menu.errors.full_messages_for(:menu_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :menu_price %><br>
    <%= form.text_field :menu_price %><br>
    <% @menu.errors.full_messages_for(:menu_price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :menu_type %><br>
    <%= form.text_field :menu_type %>
    <% @menu.errors.full_messages_for(:menu_type).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :menu_image %><br>
    <%= form.text_field :menu_image %>
    <% @menu.errors.full_messages_for(:menu_img).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <button type="signup">
    <%= form.submit "Add Menu"%>
  </button>
<% end %>

<%= stylesheet_link_tag "userindex.css" %>
<div class="container">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-6">
          <h2>Card Details</h2>
        </div>
        
      </div>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Card Name</th>
          <th>Card Number</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr> 
          <td><%= card.card_name %></td>
          <td><%= card.card_number %></td>
        

          <td>
            <%= link_to "Delete Card ", [card.user, card] , data: {
              turbo_method: :delete,
              turbo_confirm: :"Are you want to delete the Card Detail?"
            } %> <a class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
          </td>
        </tr>
      </tbody>
    </table>
    
  </div>
</div>


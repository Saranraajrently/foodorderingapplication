<%= stylesheet_link_tag "show.css" %>

<header class="header-area">
  <div class="navbar-area">
    <div class="container">
      <nav class="site-navbar">
        <a href="#home" class="site-logo">SMART ORDER</a>
        <ul>
          <li> <%= link_to "Home", root_path %> </li>
        </ul>

        <button class="nav-toggler">
          <span></span>
        </button>
      </nav>
    </div>
  </div>


  <div class="container">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div id="user">
            <h3>Manage <b>User</b></h3>
          </div>
          
        </div>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>User Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr> 
            <td><%= @user.username %></td>
            <td><%= @user.user_address %></td>
            <td><%= @user.user_phonenumber %></td>
            <td>
              <%= link_to "Edit User Details ", edit_user_path(@user) %><a class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
              <%= link_to "Delete User", user_path(@user), data: {
                turbo_method: :delete,
                turbo_confirm: :"Are you want to delete the User?"}%> <a class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
            </td>
          </tr>
        </tbody>
      </table>
      
    </div>
  </div>

  <h2>Card Details</h2>
  <%= render @user.cards %> 
  <h2>Add a Card:</h2>
  <%= render 'cards/form' %>
</div> 
